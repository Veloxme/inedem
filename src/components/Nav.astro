---
const links = [
  { name: "Servicios", href: "#servicios" },
  { name: "Programas", href: "#programas" },
  { name: "Nosotros", href: "#nosotros" },
  // { name: "Contáctanos", href: "#contacto" },
];
---

<nav
  id='navbar'
  class='fixed w-full top-0 z-50 bg-white transition-all duration-300'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex justify-between items-center h-20'>
      <div class='flex items-center'>
        <img
          src='src/assets/Logo.webp'
          alt='INEDEM'
          class='h-12 w-auto'
        />
      </div>

      <!-- Desktop Navigation -->
      <div class='hidden md:flex items-center space-x-8'>
        {
          links.map((l) => (
            <a
              class='text-slate-700 hover:text-slate-900 font-medium transition-colors'
              href={l.href}>
              {l.name}
            </a>
          ))
        }
        <a
          href='#contacto'
          class='bg-slate-900 text-white px-6 py-2.5 rounded-lg hover:bg-slate-800 font-semibold transition-all'>
          Contáctanos
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id='menuBtn'
        class='md:hidden p-2'>
        <svg
          class='w-6 h-6 text-slate-900'
          fill='none'
          stroke='currentColor'
          viewBox='0 0 24 24'>
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            d='M4 6h16M4 12h16M4 18h16'
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id='mobileMenu'
    class='hidden md:hidden bg-white border-t border-slate-200'>
    <div class='px-4 pt-2 pb-4 space-y-2'>
      {
        links.map((l) => (
          <a
            class='block px-4 py-3 text-slate-700 hover:bg-slate-50 rounded-lg font-medium'
            href={l.href}>
            {l.name}
          </a>
        ))
      }
      <a
        href='#contacto'
        class='block px-4 py-3 bg-slate-900 text-white text-center rounded-lg font-semibold'
        >Contáctanos</a
      >
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById("menuBtn");
  const mobileMenu = document.getElementById("mobileMenu");

  menuBtn.addEventListener("click", function () {
    mobileMenu.classList.toggle("hidden");
  });

  // Close mobile menu on link click
  const mobileLinks = mobileMenu.querySelectorAll("a");
  mobileLinks.forEach(function (link) {
    link.addEventListener("click", function () {
      mobileMenu.classList.add("hidden");
    });
  });

  // Navbar scroll effect
  const navbar = document.getElementById("navbar");
  window.addEventListener("scroll", function () {
    if (window.scrollY > 50) {
      navbar.classList.add("nav-scrolled");
    } else {
      navbar.classList.remove("nav-scrolled");
    }
  });
</script>
